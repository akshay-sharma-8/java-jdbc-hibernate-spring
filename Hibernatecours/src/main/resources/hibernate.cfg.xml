<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>


        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/Demo2</property>
        <property name="hibernate.connection.username">postgres</property> <!-- Replace with your DB user -->
        <property name="hibernate.connection.password">akshay2005</property> <!-- Replace with your DB password -->



<!--        <property name="hibernate.hbm2ddl.auto">update</property>-->


        <property name="hibernate.hbm2ddl.auto">create</property>

        <property name="hibernate.Dialect">org.hibernate.dialect.Dialect.PostgreSQLDialect</property>



<!--        show the sql query-->
        <property name="hibernate.show_sql">true</property>


        <property name="hibernate.format_sql">true</property>

    </session-factory>
</hibernate-configuration>
